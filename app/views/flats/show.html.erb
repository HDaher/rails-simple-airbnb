<div class="card-category" id="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=751&q=80)">
  <%= @flat.name %>
</div>

<div class="container">
  <div class="d-flex flex-wrap" id="flat_details">
    <div class="card shadow-sm p-3 mb-3 bg-white rounded mr-3" style="width: 750px;">
      <div class="card-body">
        <h1 class="card-title py-2"><%= @flat.name %></h1>
        <h4 class="card-subtitle mb-2 py-2 text-muted"><%= @flat.address %></h4>
        <div class="d-flex">
          <div class="d-flex mr-3">
            <h3 class="card-trip-pricing py-2"><i class="fas fa-pound-sign mr-2"></i><%= @flat.price_per_night %></h3>
          </div>
          <div class="d-flex">
            <h3 class="card-trip-pricing py-2"><i class="fas fa-user-friends mr-2"></i><%= @flat.number_of_guests %></h3>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm p-3 mb-3 bg-white rounded" id="book" style="width: 300px;">
      <div class="card-body">
        <h4>Book this Listing!</h4>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">From</span>
          </div>
          <input type="date" class="form-control">
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">To</span>
          </div>
          <input type="date" class="form-control">
        </div>
        <button class="btn btn-success btn-block">Book Now!</button>
      </div>
    </div>

    <div class="card shadow-sm p-3 mb-3 bg-white rounded" style="width: 750px; height: 500px;">
      <div class="card-body">
        <h4>A bit more about this flat...</h4>
        <h6 class="card-title font-weight-normal"><%= @flat.description %></h6>
      </div>
    </div>
  </div>
</div>
